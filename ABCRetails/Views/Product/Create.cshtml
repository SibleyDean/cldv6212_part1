@model ABCRetails.Models.Product
@{
    ViewData["Title"] = "Add Product";
    Layout = "_Layout";
}

<h2 class="mb-4">➕ Add Product</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="ImageUrl" />

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price (R)</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StockAvailable" class="form-label">Stock Available</label>
        <input asp-for="StockAvailable" type="number" class="form-control" />
        <span asp-validation-for="StockAvailable" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload Image</label>
        <input type="file" name="imageFile" class="form-control" />

        @if (!string.IsNullOrEmpty(Model?.ImageUrl))
        {
            <div class="mt-2">
                <p class="text-muted">Current image:</p>
                <img src="@Model.ImageUrl" class="img-thumbnail" style="max-height:150px;" />
            </div>
        }
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">💾 Save</button>
        <a class="btn btn-secondary" asp-action="Index">↩️ Cancel</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
