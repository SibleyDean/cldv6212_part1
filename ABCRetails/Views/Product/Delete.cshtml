@model ABCRetails.Models.Product
@{
    ViewData["Title"] = "Delete Product";
    Layout = "_Layout";
}

<h2>Delete Product</h2>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this product?</strong>
</div>

<div class="card shadow-sm mb-3 p-3">
    <h5>@Model.ProductName</h5>
    <p>@Model.Description</p>
    <p>Price: R @Model.Price.ToString("N2")</p>
    <p>Stock: @Model.StockAvailable</p>
    <img src="@Model.ImageUrl" style="width:200px; height:auto;" class="rounded shadow-sm" />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">🗑️ Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
