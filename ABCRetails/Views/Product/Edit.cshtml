@model ABCRetails.Models.Product
@{
    ViewData["Title"] = "Edit Product";
    Layout = "_Layout";
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="RowKey" />

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StockAvailable" class="form-label"></label>
        <input asp-for="StockAvailable" type="number" class="form-control" />
        <span asp-validation-for="StockAvailable" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <p>Current Image:</p>
        <img src="@Model.ImageUrl" style="width:200px; height:auto;" class="mb-2 rounded shadow-sm" />
        <label class="form-label">Upload New Image</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">💾 Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
