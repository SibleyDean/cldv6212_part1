@model IEnumerable<ABCRetails.Models.Product>
@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}

<h2 class="mb-4">📦 Products</h2>

<a class="btn btn-primary mb-3" asp-action="Create">➕ Add New Product</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price (R)</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="img-thumbnail" style="max-height:80px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </td>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("N2")</td>
                <td>@product.StockAvailable</td>
            </tr>
        }
    </tbody>
</table>
