@{
    ViewData["Title"] = "Upload Contracts";
    Layout = "_Layout";
}

<h2>Upload Contracts</h2>
<form asp-action="UploadContract" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label class="form-label">Choose file</label>
        <input type="file" name="file" class="form-control" />
    </div>
    <button class="btn btn-primary">Upload</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}
